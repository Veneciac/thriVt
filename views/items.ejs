<%- include ./partial/header.ejs %>
<%- include ./partial/alert.ejs %>

<h1 style="text-align: center">List item </h1>

<div class="container">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Picture</th>
              <th>Giver</th>
              <th>Options</th>
            </tr>
          </thead>
          <tbody>
                <% for (let i = 0 ; i < data.length; i++) { %>
                    <tr>
                      <td><%= data[i].name %></td>
                      <td> <img src="<%= data[i].urlPic %>"> </td>
                      <td><%= data[i].User.name%></td>
                      <td> <a href="/transaction/<%= data[i].User.id %>/<%= data[i].id %>"> Request Item</a> || <a href="/item/<%= data[i].id %>/delete"> Delete Item</a> </td>
                    </tr>
                <% } %>
          </tbody>
        </table>
      </div>

      <h3 style="text-align:center"><a href="/item/add">Add Item</a></h3> 
